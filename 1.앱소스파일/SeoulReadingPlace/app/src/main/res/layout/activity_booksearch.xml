<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="#38924a">
        <ImageView
            android:id="@+id/imageview_booksearch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"/>
        <ImageView
            android:id="@+id/imageview_booksearch_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/edittext_booksearch_keyword"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/imageview_booksearch_back"
            android:paddingLeft="7dp"
            android:background="@null"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="20dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfdfdd">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_booksearch_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>