<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#dfdfdd">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="#38924a">
        <ImageView
            android:id="@+id/imageview_moreboks_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:id="@+id/textview_moreboks_type"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageview_moreboks_back"
            android:maxLines="1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_morebooks_morebooks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>